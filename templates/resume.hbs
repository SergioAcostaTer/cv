<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{resume.basics.name}}</title>
    <style>
        {{{css}}}
    </style>
</head>
<body>
    
    <!-- Header -->
    <header class="resume-header">
        <h1 class="name">{{resume.basics.name}}</h1>
        
        <div class="contact-info">
            <div class="contact-line">
                {{#if resume.basics.location}}
                    <span>{{resume.basics.location.city}}, {{resume.basics.location.region}}</span>
                    <span class="separator">·</span>
                {{/if}}
                {{#if resume.basics.phone}}
                    <a href="tel:{{resume.basics.phone}}">{{resume.basics.phone}}</a>
                    <span class="separator">·</span>
                {{/if}}
                {{#if resume.basics.email}}
                    <a href="mailto:{{resume.basics.email}}">{{resume.basics.email}}</a>
                {{/if}}
            </div>
            
            <div class="contact-line">
                {{#each resume.basics.profiles}}
                    <a href="{{this.url}}">{{removeProtocol this.url}}</a>
                    {{#unless @last}}<span class="separator">·</span>{{/unless}}
                {{/each}}
            </div>
        </div>
        
        <hr class="header-line">
    </header>

    <!-- Summary -->
    {{#if resume.basics.summary}}
    <section class="section summary">
        <!-- <h3>Summary</h3> --> <!-- Hidden per specific style example, or we can keep it if section headers are mandatory for all. Example says "SUMMARY / PROFILE PARAGRAPH" but description focuses on paragraph styling. Let's keep it clean. -->
        <p>{{resume.basics.summary}}</p>
    </section>
    {{/if}}

    <!-- Experience -->
    {{#if resume.work.length}}
    <section class="section experience">
        <h3>{{resume.sectionLabels.experience}}</h3>
        {{#each resume.work}}
        <div class="item">
            <div class="item-header">
                <div class="row">
                    <div class="left-col">
                        <div class="company">
                            {{#if this.url}}
                            <a href="{{this.url}}">{{this.name}}</a>
                            {{else}}
                            {{this.name}}
                            {{/if}}
                        </div>
                        <div class="position">{{this.position}}</div>
                    </div>
                    <div class="right-col">
                        <div class="location">{{this.location}}</div>
                        <div class="date">{{formatDate this.startDate}} – {{#if this.endDate}}{{formatDate this.endDate}}{{else}}Present{{/if}}</div>
                    </div>
                </div>
            </div>
            
            {{#if this.highlights.length}}
            <ul class="highlights">
                {{#each this.highlights}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}

    <!-- Projects -->
    {{#if resume.projects}}
    {{#if resume.projects.length}}
    <section class="section projects">
        <h3>{{resume.sectionLabels.projects}}</h3>
        {{#each resume.projects}}
        <div class="item">
            <div class="item-header">
                <div class="row">
                    <div class="left-col">
                        <div class="company">
                            {{#if this.url}}
                            <a href="{{this.url}}">{{this.name}}</a>
                            {{else}}
                            {{this.name}}
                            {{/if}}
                        </div>
                        <div class="position">{{this.description}}</div>
                    </div>
                    <div class="right-col">
                        <div class="date">{{formatDate this.startDate}} – {{#if this.endDate}}{{formatDate this.endDate}}{{else}}Present{{/if}}</div>
                    </div>
                </div>
            </div>
            
            {{#if this.highlights}}
            {{#if this.highlights.length}}
            <ul class="highlights">
                {{#each this.highlights}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
            {{/if}}
        </div>
        {{/each}}
    </section>
    {{/if}}
    {{/if}}

    <!-- Education -->
    {{#if resume.education.length}}
    <section class="section education">
        <h3>{{resume.sectionLabels.education}}</h3>
        {{#each resume.education}}
        <div class="item">
            <div class="item-header">
                <div class="row">
                    <div class="left-col">
                        <div class="school">{{this.institution}}</div>
                        <div class="degree">{{this.area}} - {{this.studyType}}</div>
                    </div>
                    <div class="right-col">
                        <div class="location">{{this.location}}</div>
                        <div class="date">{{formatDate this.startDate}} – {{formatDate this.endDate}}</div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </section>
    {{/if}}

    <!-- Skills -->
    {{#if resume.skills.length}}
    <section class="section skills">
        <h3>{{resume.sectionLabels.skills}}</h3>
        <div class="skills-grid">
            {{#each resume.skills}}
            <div class="skill-category">
                <span class="category-name">{{this.name}}:</span>
                <div class="keywords">
                    {{#each this.keywords}}
                    <span class="keyword">{{this}}</span>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

    <!-- Languages -->
    {{#if resume.languages.length}}
    <section class="section languages">
        <h3>{{resume.sectionLabels.languages}}</h3>
        <div class="skills-grid">
            <div class="skill-category">
                <div class="keywords">
                    {{#each resume.languages}}
                    <span class="keyword">{{this.language}} ({{this.fluency}})</span>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    {{/if}}

</body>
</html>